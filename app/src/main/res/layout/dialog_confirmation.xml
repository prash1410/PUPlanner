<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_image_local_conf"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/userimagetopmargin"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/nameconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/user_image_local_conf"
            android:layout_marginTop="@dimen/intermediatespace"
            android:text="Name: "/>

        <TextView
            android:id="@+id/depttconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameconf"
            android:layout_marginTop="@dimen/intermediatespace"
            android:layout_centerHorizontal="true"
            android:text="Department: " />
        <TextView
            android:id="@+id/branconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/depttconf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/intermediatespace"
            android:text="Branch: "
            android:layout_marginStart="60dp"/>
        <TextView
            android:id="@+id/semconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/branconf"
            android:layout_marginTop="@dimen/intermediatespace"
            android:text="Semester: "/>

        <TextView
            android:id="@+id/rollnoconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/semconf"
            android:layout_marginTop="@dimen/intermediatespace"
            android:text="Roll No: "/>
        <TextView
            android:id="@+id/emailconf"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/rollnoconf"
            android:layout_marginTop="@dimen/intermediatespace"
            android:layout_marginBottom="@dimen/intermediatespace"
            android:text="Email: "/>

    </RelativeLayout>

</ScrollView>