<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/ScheduleCard"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ScheduleNameView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3f51b4"
                android:textStyle="bold"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:text="Maybe"
                android:textColor="#FFF"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ScheduleNameView">
                <ImageButton
                    android:id="@+id/Share"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/cardshare"/>
                <ImageButton
                    android:id="@+id/Delete"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toStartOf="@+id/Share"
                    android:background="@drawable/carddelete"/>
                <ImageButton
                    android:id="@+id/Edit"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toStartOf="@+id/Delete"
                    android:background="@drawable/cardedit"/>
                <ImageButton
                    android:id="@+id/Default"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toStartOf="@+id/Edit"
                    android:background="@drawable/carddefault"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>